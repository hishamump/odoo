<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="order_tree" model="ir.ui.view">
        <field name="name">order.tree</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
        <field name="arch" type="xml">
            <tree position="replace">
                <tree>
                    <field name="name" />
                    <field name="date_planned_start" />
                    <field name="product_id" readonly="1"/>
                    <button name="order_details" string="Order Details" class="oe_highlight"/>
                    <button name="create_process" string="Create Process" class="oe_highlight"/>
                </tree>
           </tree>
        </field>
    </record>

    <record id="order_form" model="ir.ui.view">
        <field name="name">order.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Processes">
                    <group>
                        <field name="name"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <!--action of Orders menu-->
    <record model="ir.actions.act_window" id="action_order">
        <field name="name">Orders</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mrp.production</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No orders found!
            </p>
        </field>
    </record>

    <menuitem id="mes_order" name="Orders" sequence="2" parent="ismart_mes_root" action="action_order"/>
</odoo>