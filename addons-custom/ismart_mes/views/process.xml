<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="process_tree" model="ir.ui.view">
        <field name="name">process.tree</field>
        <field name="model">process</field>
        <field name="arch" type="xml">
            <tree string="Processes">
                <field name="process_sequence"/>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="status"/>
                <field name="order_id"/>
            </tree>
        </field>
    </record>

    <record id="process_form" model="ir.ui.view">
        <field name="name">process.form</field>
        <field name="model">process</field>
        <field name="arch" type="xml">
            <form string="Processes">
                <sheet>
                    <div class="oe_title">
                        <field name="process_sequence" readonly="1"/>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="order_id"></field>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="status"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="process_graph" model="ir.ui.view">
        <field name="name">process.graph</field>
        <field name="model">process</field>
        <field name="arch" type="xml">
            <graph string="Processes" type="pie">
                <field name="status" type="col"/>
            </graph>
        </field>
    </record>

    <!--action of Processes menu-->
    <record model="ir.actions.act_window" id="action_process">
        <field name="name">Process</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">process</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No process found!
            </p>
        </field>
    </record>

    <menuitem id="mes_process" name="Processs" sequence="3" parent="ismart_mes_root" action="action_process"/>
</odoo>