<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_board_order" model="ir.actions.act_window">
        <field name="name">action.board.order</field>
        <field name="res_model">order</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="order_graph"/>
    </record>

    <record id="action_board_workstation" model="ir.actions.act_window">
        <field name="name">action.board.workstation</field>
        <field name="res_model">workstation</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="workstation_graph"/>
    </record>

    <record id="action_board_workstation_vibration" model="ir.actions.act_window">
        <field name="name">action.board.workstation.vibration</field>
        <field name="res_model">workstation</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="workstation_vibration_graph"/>
    </record>

    <record id="dashboard_form" model="ir.ui.view">
        <field name="name">dashboard.form</field>
        <field name="model">board.board</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Dashboard">
                <board style="1-1">
                    <column>
                        <action
                            string="Workstations Vibration (rpm)"
                            name="%(action_board_workstation_vibration)d"/>
                        <action
                            string="Workstations Power (V)"
                            name="%(action_board_workstation)d"/>
                    </column>
                    <column>
                        <action
                            string="Orders"
                            name="%(action_board_order)d"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <!--action of Dashboard menu-->
    <record id="action_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="dashboard_form"></field>
    </record>

    <menuitem id="mes_dashboard" name="Dashboard" sequence="1" parent="ismart_mes_root" action="action_dashboard"/>
</odoo>