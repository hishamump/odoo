<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="workstation_tree" model="ir.ui.view">
        <field name="name">workstation.tree</field>
        <field name="model">workstation</field>
        <field name="arch" type="xml">
            <tree string="Tests">
                <field name="workstation_sequence"/>
                <field name="name"/>
                <field name="location"/>
                <field name="power_read"/>
                <field name="vibration_read"/>
                <field name="notes"/>
                <field name="image" widget="image" width="70" height="70"/>
            </tree>
        </field>
    </record>

    <record id="workstation_form" model="ir.ui.view">
        <field name="name">workstation.form</field>
        <field name="model">workstation</field>
        <field name="arch" type="xml">
            <form string="Workstations">
                <sheet>
                    <div class="oe_button_box" type="button_box">
                        <button name="get_workstation_status" string="Get Status"
                                type="object" class="oe_stat_button" icon="fa-archive">
                        </button>
                    </div>
                    <div class="oe_title">
                        <field name="workstation_sequence" readonly="1"/>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="image" widget="image"/>
                        </group>
                        <group>
                            <field name="location"/>
                            <field name="power_read"/>
                            <field name="vibration_read"/>
                            <field name="notes"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="workstation_graph" model="ir.ui.view">
        <field name="name">workstation.graph</field>
        <field name="model">workstation</field>
        <field name="arch" type="xml">
            <graph string="Workstations" type="bar">
                <field name="name" type="row"/>
                <field name="location" type="row"/>
                <field name="power_read" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="workstation_vibration_graph" model="ir.ui.view">
        <field name="name">workstation.vibration.graph</field>
        <field name="model">workstation</field>
        <field name="arch" type="xml">
            <graph string="Workstations Vibrations" type="bar">
                <field name="name" type="row"/>
                <field name="location" type="row"/>
                <field name="vibration_read" type="measure"/>
            </graph>
        </field>
    </record>


    <!--action of Workstation menu-->
    <record model="ir.actions.act_window" id="action_workstation">
        <field name="name">Workstations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">workstation</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create first workstation!
            </p>
        </field>
    </record>

    <menuitem id="mes_workstation" name="Workstations" sequence="2" parent="ismart_mes_root" action="action_workstation"/>
</odoo>