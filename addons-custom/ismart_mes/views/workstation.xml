<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="workstation_tree" model="ir.ui.view">
        <field name="name">workstation.tree</field>
        <field name="model">workstation</field>
        <field name="arch" type="xml">
            <tree string="Tests">
                <field name="name"/>
                <field name="serial"/>
                <field name="location"/>
                <field name="notes"/>
                <field name="image"/>
                <field name="production_order"/>
            </tree>
        </field>
    </record>

    <record id="workstation_form" model="ir.ui.view">
        <field name="name">workstation.form</field>
        <field name="model">workstation</field>
        <field name="arch" type="xml">
            <form string="Workstations">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="serial"/>
                            <field name="image"/>
                            <field name="production_order"/>
                        </group>
                        <group>
                            <field name="location"/>
                            <field name="notes"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!--action of Workstation menu-->
    <record model="ir.actions.act_window" id="action_workstation">
        <field name="name">Workstations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">workstation</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create first workstation!
            </p>
        </field>
    </record>



    <menuitem id="mes_workstation" name="Workstations" sequence="2" parent="mes_main" action="action_workstation"/>
</odoo>