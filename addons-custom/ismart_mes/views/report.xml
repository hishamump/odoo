        <field name="name">report.form</field>
        <field name="model">report</field>
        <field name="arch" type="xml">
            <form string="Reports">

            </form>
        </field>
    </record>

    <!--action of Reports menu-->
    <record model="ir.actions.act_window" id="action_report">
        <field name="name">Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report</field>
        <field name="view_mode">form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No reports found!
            </p>
        </field>
    </record>

    <menuitem id="mes_report" name="Reports" sequence="5" parent="ismart_mes_root" action="action_report"/>
</odoo>